# Production Environment Variables for Web3 Community

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_mysql_root_password
MYSQL_DATABASE=web3_community
MYSQL_USER=web3user
MYSQL_PASSWORD=your_secure_mysql_password

# Email Configuration
EMAIL_USERNAME=noreply@web3community.com
EMAIL_PASSWORD=your_app_specific_password

# JWT Configuration (use long random strings in production)
JWT_SECRET=your_long_random_jwt_secret_key_at_least_256_characters
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Firebase Configuration (optional)
FIREBASE_SERVER_KEY=your_firebase_server_key_here

# Other Services Configuration
LOG_LEVEL=INFO
ENVIRONMENT=production