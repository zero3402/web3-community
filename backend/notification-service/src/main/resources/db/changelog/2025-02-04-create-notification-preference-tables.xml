<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/db.changelog-4.0.xsd">

    <!-- Notification Preferences Table -->
    <changeSet id="create-notification-preferences-table" author="developer">
        <createTable tableName="notification_preferences">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="ENUM('POST_LIKES', 'POST_COMMENTS', 'COMMENT_REPLIES', 'COMMENT_LIKES', 'FOLLOWS', 'MENTIONS', 'POST_PUBLISHED', 'COMMENT_PINNED', 'SYSTEM_ANNOUNCEMENTS', 'EMAIL_DIGESTS', 'SECURITY_ALERTS', 'ACHIEVEMENTS', 'MESSAGES')">
                <constraints nullable="false"/>
            </column>
            <column name="is_enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="email_enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="push_enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="in_app_enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint
            baseTableName="notification_preferences"
            baseColumnNames="user_id"
            referencedTableName="users"
            referencedColumnNames="id"
            constraintName="fk_notification_preferences_user_id"
            onDelete="CASCADE"/>
            
        <createIndex tableName="notification_preferences" indexName="idx_notification_preferences_user_id">
            <column name="user_id"/>
        </createIndex>
        
        <createIndex tableName="notification_preferences" indexName="idx_notification_preferences_type">
            <column name="type"/>
        </createIndex>
        
        <addUniqueConstraint 
            tableName="notification_preferences" 
            columnNames="user_id,type" 
            constraintName="uk_notification_preferences_user_type"/>
    </changeSet>

</databaseChangeLog>