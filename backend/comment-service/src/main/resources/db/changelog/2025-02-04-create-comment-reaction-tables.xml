<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/db.changelog-4.0.xsd">

    <!-- Comment Reactions Table -->
    <changeSet id="create-comment-reactions-table" author="developer">
        <createTable tableName="comment_reactions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="comment_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="reaction_type" type="ENUM('LIKE', 'DISLIKE', 'LAUGH', 'LOVE', 'ANGRY', 'SAD')">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint
            baseTableName="comment_reactions"
            baseColumnNames="comment_id"
            referencedTableName="comments"
            referencedColumnNames="id"
            constraintName="fk_comment_reactions_comment_id"
            onDelete="CASCADE"/>
            
        <addForeignKeyConstraint
            baseTableName="comment_reactions"
            baseColumnNames="user_id"
            referencedTableName="users"
            referencedColumnNames="id"
            constraintName="fk_comment_reactions_user_id"
            onDelete="CASCADE"/>
            
        <createIndex tableName="comment_reactions" indexName="idx_comment_reactions_comment_id">
            <column name="comment_id"/>
        </createIndex>
        
        <createIndex tableName="comment_reactions" indexName="idx_comment_reactions_user_id">
            <column name="user_id"/>
        </createIndex>
        
        <createIndex tableName="comment_reactions" indexName="idx_comment_reactions_type">
            <column name="reaction_type"/>
        </createIndex>
        
        <addUniqueConstraint 
            tableName="comment_reactions" 
            columnNames="comment_id,user_id" 
            constraintName="uk_comment_reactions_comment_user"/>
    </changeSet>

</databaseChangeLog>