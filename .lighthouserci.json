{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--headless --no-sandbox --disable-dev-shm-usage"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.9}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["warn", {"minScore": 0.9}],
        "categories:seo": ["warn", {"minScore": 0.8}]
      }
    }
  },
  "budgets": [
    {
      "path": "/dashboard",
      "timings": [
        {
          "metric": "interactive",
          "budget": 3000
        },
        {
          "metric": "first-meaningful-paint",
          "budget": 2000
        }
      ],
      "resourceCounts": [
        {
          "resourceType": "script",
          "budget": 10
        },
        {
          "resourceType": "total",
          "budget": 50
        }
      ]
    },
    {
      "path": "/community",
      "timings": [
        {
          "metric": "interactive",
          "budget": 4000
        },
        {
          "metric": "first-meaningful-paint",
          "budget": 2500
        }
      ],
      "resourceCounts": [
        {
          "resourceType": "script",
          "budget": 15
        },
        {
          "resourceType": "total",
          "budget": 75
        }
      ]
    },
    {
      "path": "/posts/create",
      "timings": [
        {
          "metric": "interactive",
          "budget": 3500
        },
        {
          "metric": "first-meaningful-paint",
          "budget": 2000
        }
      ]
    },
    {
      "path": "/profile",
      "timings": [
        {
          "metric": "interactive",
          "budget": 3000
        },
        {
          "metric": "first-meaningful-paint",
          "budget": 2000
        }
      ]
    }
  ]
}