# 🌿 Web3 Community Frontend Environment Variables
# Vue.js 3 + Vite Configuration

# =============================================================================
# 🚀 애플리케이션 기본 설정
# =============================================================================

# 앱 버전
VITE_APP_VERSION=1.0.0

# 앱 이름
VITE_APP_NAME=Web3 Community Platform

# 앱 설명
VITE_APP_DESCRIPTION=탈중앙화된 커뮤니티 플랫폼

# =============================================================================
# 🌐 API 서버 설정
# =============================================================================

# API 기본 URL
VITE_API_BASE_URL=http://localhost:8080

# API 타임아웃 (ms)
VITE_API_TIMEOUT=10000

# WebSocket URL
VITE_WS_URL=ws://localhost:8085/ws

# =============================================================================
# 🔐 인증 설정
# =============================================================================

# JWT 토큰 스토리지 키
VITE_TOKEN_KEY=web3_community_token

# 리프레시 토큰 스토리지 키
VITE_REFRESH_TOKEN_KEY=web3_community_refresh_token

# 토큰 만료 시간 (분)
VITE_TOKEN_EXPIRY=60

# 리프레시 토큰 만료 시간 (일)
VITE_REFRESH_TOKEN_EXPIRY=7

# =============================================================================
# 🎨 UI/UX 설정
# =============================================================================

# 기본 테마 (light/dark)
VITE_DEFAULT_THEME=light

# 기본 언어
VITE_DEFAULT_LOCALE=ko

# 페이지 타이틀 접두사
VITE_TITLE_PREFIX=Web3 Community

# 파비콘 경로
VITE_FAVICON=/favicon.ico

# =============================================================================
# 📱 반응형 설정
# =============================================================================

# 모바일 브레이크포인트
VITE_MOBILE_BREAKPOINT=768

# 태블릿 브레이크포인트
VITE_TABLET_BREAKPOINT=1024

# =============================================================================
# 🔍 개발 설정
# =============================================================================

# 개발 모드 (true/false)
VITE_DEV_MODE=true

# 디버그 모드 (true/false)
VITE_DEBUG_MODE=false

# 콘솔 로그 레벨 (error/warn/info/debug)
VITE_LOG_LEVEL=info

# 핫 리로드 활성화
VITE_HMR=true

# =============================================================================
# 📊 분석 및 모니터링
# =============================================================================

# Google Analytics ID (선택사항)
# VITE_GA_ID=G-XXXXXXXXXX

# 구글 태그 매니저 ID (선택사항)
# VITE_GTM_ID=GTM-XXXXXXX

# 센트리 DSN (에러 추적, 선택사항)
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# =============================================================================
# 🌍 PWA 설정
# =============================================================================

# PWA 활성화
VITE_PWA_ENABLED=true

# 서비스 워커 활성화
VITE_SW_ENABLED=true

# 오프라인 모드 활성화
VITE_OFFLINE_MODE=true

# =============================================================================
# 🔌 소셜 로그인 설정
# =============================================================================

# Google OAuth 클라이언트 ID
# VITE_GOOGLE_CLIENT_ID=your-google-client-id

# GitHub OAuth 클라이언트 ID
# VITE_GITHUB_CLIENT_ID=your-github-client-id

# Discord OAuth 클라이언트 ID
# VITE_DISCORD_CLIENT_ID=your-discord-client-id

# =============================================================================
# 📱 푸시 알림 설정
# =============================================================================

# Firebase 프로젝트 ID
# VITE_FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase 메시징 서버 키
# VITE_FIREBASE_MESSAGING_KEY=your-firebase-messaging-key

# VAPID 퍼블릭 키
# VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# =============================================================================
# 🌐 CDN 설정
# =============================================================================

# CDN 기본 URL
# VITE_CDN_BASE_URL=https://cdn.web3community.com

# 정적 리소스 URL
# VITE_STATIC_URL=/static

# =============================================================================
# 🎨 기능 플래그
# =============================================================================

# 다크 모드 활성화
VITE_DARK_MODE_ENABLED=true

# 푸시 알림 활성화
VITE_PUSH_NOTIFICATIONS_ENABLED=true

# 실시간 채팅 활성화
VITE_REALTIME_CHAT_ENABLED=true

# 파일 업로드 활성화
VITE_FILE_UPLOAD_ENABLED=true

# 다국어 지원 활성화
VITE_I18N_ENABLED=true

# 접근성 모드 활성화
VITE_ACCESSIBILITY_ENABLED=true

# =============================================================================
# 📊 성능 설정
# =============================================================================

# 이미지 지연 로딩
VITE_LAZY_LOADING_ENABLED=true

# 코드 분할 활성화
VITE_CODE_SPLITTING_ENABLED=true

# 프리페치 활성화
VITE_PREFETCH_ENABLED=true

# 캐시 버전
VITE_CACHE_VERSION=1.0.0

# =============================================================================
# 🔧 테스트 설정
# =============================================================================

# 테스트 모드
VITE_TEST_MODE=false

# E2E 테스트 활성화
VITE_E2E_ENABLED=false

# 모의 API 활성화
VITE_MOCK_API_ENABLED=false

# =============================================================================
# 🌍 지역화 설정
# =============================================================================

# 지원되는 언어 목록
VITE_SUPPORTED_LOCALES=ko,en,ja,zh

# 기본 타임존
VITE_DEFAULT_TIMEZONE=Asia/Seoul

# =============================================================================
# 📱 모바일 앱 설정
# =============================================================================

# iOS 앱 ID
# VITE_IOS_APP_ID=123456789

# Android 패키지 이름
# VITE_ANDROID_PACKAGE_NAME=com.web3community.app

# 앱 스토어 URL
# VITE_APP_STORE_URL=https://apps.apple.com/app/web3-community

# 플레이 스토어 URL
# VITE_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.web3community.app

# =============================================================================
# 🎨 브랜딩 설정
# =============================================================================

# 로고 경로
VITE_LOGO_PATH=/logo.svg

# 브랜드 색상
VITE_BRAND_COLOR=#3b82f6

# 브랜드 보조 색상
VITE_BRAND_SECONDARY_COLOR=#d946ef

# =============================================================================
# 🔗 외부 서비스 URL
# =============================================================================

# 이용약약관 URL
VITE_TERMS_URL=/terms

# 개인정보처리방침 URL
# VITE_PRIVACY_URL=https://web3community.com/privacy

# 고객센터 URL
VITE_SUPPORT_URL=/support

# 문의하기 URL
VITE_CONTACT_URL=/contact

# =============================================================================
# 🌐 보안 설정
# =============================================================================

# CSP(Content Security Policy) 활성화
VITE_CSP_ENABLED=true

# XSS 보호 활성화
VITE_XSS_PROTECTION_ENABLED=true

# CSRF 토큰 활성화
VITE_CSRF_PROTECTION_ENABLED=true

# =============================================================================
# 📈 비즈니스 설정
# =============================================================================

# 회사명
VITE_COMPANY_NAME=Web3 Community Inc.

# 연락처 이메일
VITE_CONTACT_EMAIL=support@web3community.com

# 고객센터 전화번호
# VITE_SUPPORT_PHONE=+82-2-1234-5678

# =============================================================================
# 🌐 배포 환경 설정
# =============================================================================

# 배포 환경 (development/staging/production)
VITE_DEPLOY_ENV=development

# 배포 시간
VITE_DEPLOY_TIME=2024-01-01T00:00:00Z

# 빌드 번호
VITE_BUILD_NUMBER=1

# Git 커밋 해시
VITE_GIT_COMMIT_HASH=unknown